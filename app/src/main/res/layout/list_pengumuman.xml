<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/iv_preview"
        android:src="@drawable/postdefault"
        android:scaleType="centerCrop"
        android:layout_width="100sp"
        android:layout_height="100sp" />

    <TextView
        android:id="@+id/tv_kepada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kepada"
        android:layout_below="@+id/tv_waktu"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/iv_preview"/>

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:justificationMode="inter_word"
        android:textSize="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/iv_preview"
        android:layout_below="@+id/tv_kepada" />

    <TextView
        android:id="@+id/tv_nama_pengirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginLeft="4dp"
        android:singleLine="true"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/iv_preview"
        android:layout_alignBottom="@+id/iv_preview"/>

    <TextView
        android:id="@+id/tv_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="waktu"
        android:textSize="10dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>